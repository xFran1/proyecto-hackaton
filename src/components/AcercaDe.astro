}
.titulo {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 1s ease-out, transform 1s ease-out;
}

.mostrar {
    opacity: 1;
    transform: translateY(0);  
}
@keyframes mostrar1 {
    from{
        visibility: visible;
        opacity: 0;
    }
    to{
        visibility: visible;

        opacity: 1;

    }
}
@keyframes movimiento {
    from{
        transform: translateX(0px) translateY(0px);
    }
    50%{
        transform: translateX(5px) translateY(0px);

    }
    to{
        transform: translateX(0px) translateY(0px);

    }
}

</style>

