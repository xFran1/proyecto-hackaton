<script>
    
   


    const cards = document.querySelectorAll('.reto')

    const observer = new IntersectionObserver(entries =>{
        entries.forEach(entry => {
            if(entry.isIntersecting){
                entry.target.classList.add("show")
            }
        });
    }
    ,
    {
        threshold:1,
    })

    cards.forEach(card => {
        observer.observe(card)
    });

</script>
